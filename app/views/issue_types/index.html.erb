<h1>Issue Types</h1>

<table class="table" style="width:400px">
  <thead style="background-color:lightgray" >
    <tr>
      <th width="100%">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_types.each do |issue_type| %>
      <tr>
        <td><%= issue_type.name %></td>
        <td><%= link_to 'Edit', edit_issue_type_path(issue_type) %></td>
        <td><%= link_to 'Destroy', issue_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue Type', new_issue_type_path %>
