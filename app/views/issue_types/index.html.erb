<h1>Listing issue_types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issuetypes.each do |issue_type| %>
      <tr>
        <td><%= issue_type.name %></td>
        <td><%= link_to 'Show', issue_type %></td>
        <td><%= link_to 'Edit', edit_issue_type_path(issue_type) %></td>
        <td><%= link_to 'Destroy', issue_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue_Type', new_issue_type_path %>
