<h1>Tickets</h1>

<table class="table">
  <thead style="background-color:lightgray" >
    <tr>
      <th width="20%">User</th>
      <th width="10%">Issue type</th>
      <th width="10%">Issue status</th>
      <th width="20%">Name</th>
      <th width="40%">Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.user.email %></td>
        <td><%= ticket.issue_type.name %></td>
        <td><%= ticket.issue_status.name %></td>
        <td><%= ticket.name %></td>
        <td><%= ticket.comment %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
