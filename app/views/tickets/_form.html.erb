<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>User</label><br>
    <%= f.select :user_id, User.all.collect { |u| [ u.email, u.id ] }, {:include_blank => true} %>
  </div>
  <div class="field">
    <label>Type</label><br>
    <%= f.select :issue_type_id, IssueType.all.collect { |it| [ it.name, it.id ] }, {:include_blank => true} %>
  </div>
  <div class="field">
    <label>Status</label><br>
    <%= f.select :issue_status_id, IssueStatus.all.collect { |is| [ is.name, is.id ] }, {:include_blank => true} %>
  </div>
  <div class="field">
    <label>Project</label><br>
    <%= f.select :project_id, Project.all.collect { |p| [ p.name, p.id ] }, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
